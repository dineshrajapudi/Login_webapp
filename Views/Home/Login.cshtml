@model LoginUser1
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Sign-in</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="UserNAME1" class="p-0 text-black"></label>
            <input asp-for="UserNAME1" class="form-control" />
            <span asp-validation-for="UserNAME1" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Password11" class="p-0 text-black"></label>
            <input asp-for="Password11" class="form-control" />
            <span asp-validation-for="Password11" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3 p-1">
                <button type="submit" class="btn btn-primary form-control">login</button>
            </div>
            <div class="col-6 col-md-3 p-1">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border-1 form-control">back</a>
            </div>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Create" class="btn bg-blue border-1 form-control">Sign-up</a>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Login" class="btn bg-red border-1 form-control">reset</a>
            </div>
        </div>
    </div>
</form>